{{>layout.top}}

{{>head tagName="h1"}}

{{>sidebar}}

<div class="{{#if @root.styles.noMargin}}px-3{{else}}container{{/if}}">
  <div class="total-filter pt-2 pt-md-2 px-0">
    <div>
      <div class="row">
        
        <div class="col-12 col-sm-8 order-sm-last pb-4 pb-sm-0 ">
          {{#if @root.styles.noButton.export}}
          {{else}} 
            <div class="col-12 d-sm-flex justify-content-end p-0 export">
              {{>export}}
            </div>
          {{/if}}

          {{#if @root.styles.noButton.contribute}}
          {{else}} 
            <div class="col-12 d-sm-flex justify-content-end p-0 contribute">               
              {{>contribute}}
            </div>
          {{/if}}

        </div>
        <div class="col-12 col-sm-4 d-sm-flex total">
          {{widget name='total' message='eventsTotal'}}
        </div>
      </div>

      {{#if agenda.noEvents}}
        <p>{{agenda.noEvents}}</p>
      {{/if}}

      {{widget name='activeFilters' className='active-filters'}}

      <!--<button class="main-show-sidebar float-right btn btn-outline-primary btn-sm wbg" data-sidebar-toggle>
        <i class="fa fa-plus"></i>
        {{i18n 'filters'}}
      </button>-->
    </div>
  </div>

  <div class="events">
    {{>list}}
  </div>

</div>

{{#if @root.styles.footer.linkAbout}}
  <div class="col-12 d-sm-flex justify-content-center p-0 about">               
    {{>about}}
  </div>
{{/if}}

<div data-oa-filters-root></div>

{{>layout.bottom}}
